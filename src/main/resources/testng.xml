<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="For fun project suite" verbose="1" >
    <listeners>
        <listener class-name="tests.BaseTest" />
    </listeners>

    <test name="test" enabled="false">
        <classes>
            <class name="tests.test">
                <methods>
                    <include name="firstSimpleTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Login" enabled="true">
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="positiveLoginTest"/>
                    <include name="negativeLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Feed" enabled="false">
        <parameter name="wordToSearch" value="Новый год"/>
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="positiveLoginTest"/>
                    <exclude name="negativeLoginTest"/>
                </methods>
            </class>
            <class name="tests.SearchTests">
                <methods>
                    <include name="searchAndSendStatistics"/>
                    <include name="searchAndPlayAudio"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>